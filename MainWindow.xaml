<Window x:Class="АбрамовАвтосервис.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:АбрамовАвтосервис"
        mc:Ignorable="d"
        Title="Абрамов" Height="450" Width="800" FontFamily="Tw Cen MT" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image></Image>

        <Frame Grid.Row="0" Background="#FFFFFFE1"></Frame>
        <Image Source="/rec/service_logo.ico" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30"></Image>
        <TextBlock Text="Услуги автосервиса" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="35" Margin="55"></TextBlock>
        <Button Name="BtnBack"  Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="45" Click="BtnBack_Click"></Button>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"></Frame>
        
    </Grid>
</Window>
